<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ExtrasLayout"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    tools:context=".HistoryFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Graph:"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:id="@+id/SpeedGraphView">

    </com.jjoe64.graphview.GraphView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RPM Graph:"
        android:layout_marginTop="16dp"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:id="@+id/RPMGraphView">

    </com.jjoe64.graphview.GraphView>

    <Button
        android:id="@+id/GetValuesButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/GetDBValuesText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GetTroubleCodesButton"
        android:text="Get Trouble Codes"/>

</LinearLayout>